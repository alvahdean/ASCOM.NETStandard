<Page x:Class="RACI.DeviceControl.Wpf.Chooser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RACI.DeviceControl.Wpf"
      mc:Ignorable="d" 
      Background="LightGray"
      d:DesignHeight="500" d:DesignWidth="350"
      Title="Device Chooser">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" MinHeight="100">

            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">

            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <Button Name="btnConnect" Content="Connect"/>
                <Button Name="btnExit" Content="Exit"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
